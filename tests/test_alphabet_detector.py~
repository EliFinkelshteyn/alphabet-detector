# -*- coding: utf-8 -*-
import pytest
from alphabet_detector import AlphabetDetector

@pytest.fixture
def ad():
    return AlphabetDetector()

class TestAlphabetDetector:
    def test_only_alphabet_chars(self, ad):
        assert ad.only_alphabet_chars(u"ελληνικά means greek", "LATIN") == False
        assert ad.only_alphabet_chars(u"ελληνικά", "GREEK") == True
        assert ad.only_alphabet_chars(u'سماوي يدور', 'ARABIC') == True
        assert ad.only_alphabet_chars(u'שלום', 'HEBREW') == True
        assert ad.only_alphabet_chars(u"frappé", "LATIN") == True
        assert ad.only_alphabet_chars(u"hôtel lœwe 67", "LATIN") == True
        assert ad.only_alphabet_chars(u"det forårsaker første", "LATIN") == True
        assert ad.only_alphabet_chars(u"Cyrillic and кириллический", "LATIN") == False
        assert ad.only_alphabet_chars(u"кириллический", "CYRILLIC") == True
        
